<!-- need the template that handlebars can render into
    - create a button that will submit user input into database -->
    <h1>Burgers Are Good</h1>
    <h2>Eat the Burgers!</h2>

    <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{>burgers/burgers-block devoured=true}}
        {{/unless}}
        {{/each}}
    </ul>

    <h2>Burgers To Eat!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burgers-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add Your Favorite Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="burg" name="name">
  </div>

  <div class="form-group">
    <label for="sleepy">Devoured?</label><br>
    <input type="radio" name="sleepy" value="1" checked> Devoured!<br>
    <input type="radio" name="sleepy" value="0"> Uneaten
  </div>

  <button type="submit">Add Burger</button>
</form>
